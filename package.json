{
  "private": true,
  "name": "react-turn-based-game",
  "version": "0.0.0",
  "type": "module",
  "workspaces": ["client", "server"],
  "scripts": {
    "client": "yarn workspace client start",
    "server": "yarn workspace server start",
    "gen-api": "node --experimental-specifier-resolution=node ./gen-api.js",
    "start": "yarn gen-api && concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "build": "yarn gen-api && yarn workspace client build && cp -r client/build/ server/",
    "server-start": "yarn build && yarn workspace server start",
    "build-clean": "rm -rf client/build && rm -rf server/build",
    "lint": "eslint . --fix",
    "clean": "rm -rf node_modules && rm -rf client/node_modules",
    "reset": "yarn clean && yarn install"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "6.0.0",
    "javascript-typescript-langserver": "2.11.3",
    "lerna": "4.0.0",
    "nodemon": "2.0.12",
    "typescript": "4.3.4",
    "typescript-language-server": "0.5.1",
    "@babel/eslint-parser": "7.13.14",
    "customize-cra": "^1.0.0",
    "eslint": "7.11.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "1.7.0",
    "eslint-plugin-workspaces": "0.6.2",
    "prettier": "2.2.1",
    "react-app-rewired": "^2.1.8"
  }
}
